<div class="container">

  <div class="text-center">
  <h1>Jobs Board</h1>
</div>
<div class="col-10 offset-1">
  <table class="table">
  <thead>
    <tr>
      <th>Company Name</th>
      <th>Recruiter</th>
      <th>Recruiter company</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= job.hiring_company %></td>
        <td><%= job.recruiter %></td>
        <td><%= job.recruiter_company %></td>
        <td><%= link_to 'View', job_path(job), class: "btn btn-success" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>

<div class="text-center">
  <%= link_to 'New Job', new_job_path, class: "btn btn-primary" %>
</div>
</div>

