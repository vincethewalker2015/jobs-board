<p id="notice"><%= notice %></p>

<h1>Jobs</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Recruiter</th>
      <th>Recruiter company</th>
      <th>Job title</th>
      <th>Permanent or contract</th>
      <th>Hiring company</th>
      <th>Link</th>
      <th>Cv submitted</th>
      <th>Notes</th>
      <th>Outcome</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= job.date %></td>
        <td><%= job.recruiter %></td>
        <td><%= job.recruiter_company %></td>
        <td><%= job.job_title %></td>
        <td><%= job.permanent_or_contract %></td>
        <td><%= job.hiring_company %></td>
        <td><%= job.link %></td>
        <td><%= job.cv_submitted %></td>
        <td><%= job.notes %></td>
        <td><%= job.outcome %></td>
        <td><%= link_to 'Show', job %></td>
        <td><%= link_to 'Edit', edit_job_path(job) %></td>
        <td><%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Job', new_job_path %>
