<div class="text-center">
  <h2 id="notice">Job: <%= @job.hiring_company %></h2>
</div>

<div class="col-12  mt-4">
<div class="card card-body">
  <div class="inner">
    <p>
      <strong>Date:</strong>
      <%= @job.date %>
    </p>

    <p>
      <strong>Recruiter:</strong>
      <%= @job.recruiter %>
    </p>

    <p>
      <strong>Recruiter company:</strong>
      <%= @job.recruiter_company %>
    </p>

    <p>
      <strong>Job title:</strong>
      <%= @job.job_title %>
    </p>

    <p>
      <strong>Permanent or contract:</strong>
      <%= @job.permanent_or_contract %>
    </p>

    <p>
      <strong>Hiring company:</strong>
      <%= @job.hiring_company %>
    </p>

    <p>
      <strong>Link:</strong>
      <%= @job.link %>
    </p>

    <p>
      <strong>Cv submitted:</strong>
      <%= @job.cv_submitted %>
    </p>

    <p>
      <strong>Notes:</strong>
      <%= @job.notes %>
    </p>

    <p>
      <strong>Job Description:</strong>
      <%= @job.job_description %>
    </p>

    <p>
      <strong>Outcome:</strong>
      <%= @job.outcome %>
    </p>
  </div>
</div>
  

<div class="text-center mt-2">
  <%= link_to 'Edit Job', edit_job_path(@job), class: "btn btn-warning" %> 
  <%= link_to 'Jobs Index', jobs_path, class: "btn btn-primary" %>
  <%= link_to 'Delete Job?', job_path(@job), method: :delete, data: {confirm: "Delete Job?"}, class: "btn btn-danger" %>
</div>
</div>
