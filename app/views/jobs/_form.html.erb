<div class="col-8 offset-2">
  <div class="card show-card text-center">
      <%= form_with(model: job, local: true) do |f| %>
      <% if job.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(job.errors.count, "error") %> prohibited this job from being saved:</h2>

          <ul>
            <% job.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <%= f.label :date, class: "form-label float-left mt-1 ml-1" %>
        <%= f.date_select :date, :order => [:day, :month, :year], class: "form-control date-panel" %>
      </div>

      <div class="form-group">
        <%= f.label :recruiter, class: "form-label float-left mt-1 ml-1" %>
        <%= f.text_field :recruiter, class: "form-control form-decoration", placeholder: "Name of Recruiter", autofocus: true %>
      </div>

      <div class="form-group">
        <%= f.label :recruiter_company, class: "form-label float-left mt-1 ml-1" %>
        <%= f.text_field :recruiter_company, class: "form-control form-decoration", placeholder: "Recruitment Company", autofocus: true %>
      </div>

      <div class="form-group">
        <%= f.label :job_title, class: "form-label float-left mt-1 ml-1" %>
        <%= f.text_field :job_title, class: "form-control form-decoration", placeholder: "Title of Job", autofocus: true %>
      </div>

      <div class="form-group">
        <%= f.label :job_description, class: "form-label float-left mt-1 ml-1" %>
        <%= f.text_area :job_description, class: "form-control form-decoration", placeholder: "Paste in job description here", autofocus: true %>
      </div>

      <div class="form-group">
        <%= f.label :permanent_or_contract, class: "form-label float-left mt-1 ml-1" %>
        <%= f.text_field :permanent_or_contract, class: "form-control form-decoration", placeholder: "Permanent or contract?", autofocus: true %>
      </div>

      <div class="form-group">
        <%= f.label :hiring_company, class: "form-label float-left mt-1 ml-1" %>
        <%= f.text_field :hiring_company, class: "form-control form-decoration", placeholder: "Which company", autofocus: true %>
      </div>

      <div class="form-group">
        <%= f.label :link, class: "form-label float-left mt-1 ml-1" %>
        <%= f.text_field :link, class: "form-control form-decoration", placeholder: "Link to company website or job spec", autofocus: true %>
      </div>

      <div class="form-group">
        <%= f.label "Cv Submitted (tick if yes)", class: "form-label float-left  ml-1" %>
        <%= f.check_box :cv_submitted, class: "mr-4" %>
      </div>

      <div class="form-group">
        <%= f.label :notes, class: "form-label float-left mt-1 ml-1" %>
        <%= f.text_area :notes, class: "form-control form-decoration" %>
      </div>

      <div class="form-group">
        <%= f.label :outcome, class: "form-label float-left mt-1 ml-1" %>
        <%= f.text_field :outcome, class: "form-control form-decoration", placeholder: "Outcome", autofocus: true %>
      </div>

      <div class="form-group">
        <%= f.submit class: "btn btn-primary" %>
        <%= link_to "Back to Index", jobs_path, class: "btn btn-warning" %>
      </div>

    <% end %>

  </div>
</div>
